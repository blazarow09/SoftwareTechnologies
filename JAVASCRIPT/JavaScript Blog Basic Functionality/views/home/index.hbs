<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">


                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <p style="
                    white-space: pre-line; height: 295px;
                       overflow: hidden;
                       text-overflow: ellipsis;
                       ">
                        {{this.content}}
                    </p>

                    <small class="author">
                        {{this.User.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
